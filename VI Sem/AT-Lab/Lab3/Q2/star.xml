<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:color="#0066FF" android:width="2dp"/> <!-- Blue border when focused -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:color="#B0B0B0" android:width="1dp"/> <!-- Gray border when not focused -->
        </shape>
    </item>
</selector>
